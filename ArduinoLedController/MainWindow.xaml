<Window x:Class="ArduinoLedController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArduinoLedController"
        mc:Ignorable="d"
        Title="ArduinoLedController" Height="300" Width="400">
    <Grid Margin="0,0,0,2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="97*"/>
            <ColumnDefinition Width="208*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btn1" Content="Exception Generation " HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="130" Click="btn1_Click" Margin="97,204,0,0" Grid.Column="1"/>
        <TextBox x:Name="tbSettingText" HorizontalAlignment="Left" Margin="44,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="310" Visibility="Visible" Grid.ColumnSpan="2" Height="17"/>
        <TextBlock HorizontalAlignment="Left" Margin="44,85,0,0" TextWrapping="Wrap" Text="Введите виртуальный COM порт:" VerticalAlignment="Top" FontSize="14" Grid.ColumnSpan="2"/>
        <Button x:Name="btnSetPin" Content="Выбрать скетч" HorizontalAlignment="Left" Margin="44,204,0,0" VerticalAlignment="Top" Click="btnSetPin_Click" Height="30" Width="130" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
